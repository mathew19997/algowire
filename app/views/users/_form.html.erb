      <% end %>
      </ul>
    </div>
  <% end %>
  <% if params[:action] == "new" %>
    <%= form.label :email %>
    <%= form.text_field :email %>
    <br>
  <% end%>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <br>
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation %>
  <br>
  <div class="actions">
    <% if params[:action] == "new" %>
      <%= form.submit "Sign up" %>
    <% else %>
      <%= form.submit "Change password" %>
    <%end%>
  </div>
<% end %>
