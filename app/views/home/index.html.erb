<div class="container">
	<h1>
		Hi
	</h1>
	<div class="row">
		<div class="col">
			<% if @user.nil? %>
				<h2>You are currently not logged in</h2>
				<%= link_to "Log in", new_session_path, class: "btn btn-success text-white"%>
			<%else%>
				<h2>You are currently logged in as <%= @user.email%></h2>
				<%= link_to "Log out", session_path(@user), method: :delete, class: "btn btn-danger text-white"%>
			<%end%>
			<%= link_to "Available for logged in users", sample_home_index_path, class: "btn btn-primary text-white" %>
		</div>
	</div>
</div>